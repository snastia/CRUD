{{#each this}}
<div class="post">
    <h2>{{title}}</h2>
    <p>{{text}}</p>

    <button class="editPostButton" data-id="{{id}}">Редагувати</button>
    <button class="deletePostButton" data-id="{{id}}">Видалити</button>
    
    <div class="commentsContainer" data-id="{{id}}">
    
    <h3>Коментарі:</h3>
    
    <ul>
        {{#each comments}}
    <li>
      {{this.comments}}
    </li>
        {{/each}}
    </ul>
    
    <form class="createCommentForm" data-id="{{id}}">
    
    <input type="text" class="commentInput" name="comment" placeholder="Новий коментар" required>
    
    <button type="submit">Додати коментар</button>
    
    </form>
    </div>
    </div>
    {{/each}}